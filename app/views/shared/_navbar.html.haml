%nav.navbar.navbar-custom.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header.page-scroll
      %button.navbar-toggle{"data-target" => ".navbar-main-collapse", "data-toggle" => "collapse", type: "button"}
        %i.fa.fa-bars
      %span.light
        - if current_page?(root_path)
          %a.navbar-brand{href: "#page-top"}
            Catmosphere Café
        - else
          %a.navbar-brand{href: "/"}
            Catmosphere Café
    / Collect the nav links, forms, and other content for toggling
    .collapse.navbar-collapse.navbar-right.navbar-main-collapse
      %ul.nav.navbar-nav
        / Hidden li included to remove active class from about link when scrolled up past about section
        - if current_page?(root_path)
          %li.hidden
            %a{href: "#page-top"}
          %li.page-scroll
            %a{href: "#introduction", style: "color: #FFF;"} Home
          %li
            %a{:href => "https://www.catmospherecafe.com.au", style: "color: #FFF;"} Sydney
          %li
            %a{:href => "/chiangmai", style: "color: #FFF;"} Chiang Mai
        -else
          %li.hidden
            %a{href: "/"}
          %li.page-scroll
            %a{href: "/#introduction", style: "color: #FFF;"} Home         
          %li
            %a{:href => "https://www.catmospherecafe.com.au", style: "color: #FFF;"} Sydney
          %li
            %a{:href => "/chiangmai", style: "color: #FFF;"} Chiang Mai
